<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillPalMAUI.ReminderCard">
    <Border StrokeShape="RoundRectangle 10,10,10,10">
        <Grid BackgroundColor="#D9D9D9">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Label 
                Text="Az emlékeztető"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Grid.Column="1" Grid.Row="0"/>
            <Label 
                Text="Minden érdekes infó"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"/>
            <Button Text="Töröl" Grid.Column="0" Grid.Row="2"/>
            <Button Text="Infó" Grid.Column="1" Grid.Row="2"/>
            <Button Text="Szerkeszt" Grid.Column="2" Grid.Row="2"/>
        </Grid>
    </Border>
</ContentView>
