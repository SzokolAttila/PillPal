<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillPalMAUI.Resources.ContentViews.LogoContentView"
             x:Name="this">
    <VerticalStackLayout>
        <Frame BackgroundColor="{DynamicResource ComponentBackground}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HeightRequest="80"
               WidthRequest="80"
               CornerRadius="40"
               Padding="0"
               Margin="40">
            <Label TextColor="{DynamicResource TextColor}" Text="PP"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="36"
                   FontFamily="PlayfairDisplay"
                   FontAttributes="Bold"/>
        </Frame>
    </VerticalStackLayout>
</ContentView>
