<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillPalMAUI.Resources.ContentViews.LogoContentView"
             x:Name="this">
    <VerticalStackLayout>
        <Frame BackgroundColor="{DynamicResource ComponentBackground}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HeightRequest="120"
               WidthRequest="120"
               CornerRadius="60"
               Padding="0"
               Margin="20,20,20,65">
            <Image
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                Source="pillpal_logo.png"/>
        </Frame>
    </VerticalStackLayout>
</ContentView>
