<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillPalMAUI.Resources.Styles.CustomStyles">

    <Style TargetType="Label" x:Key="InputLabel">
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="45,0"/>
        <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
    </Style>

    <Style TargetType="SearchBar" x:Key="SearchMedicine">
        <Setter Property="Margin" Value="10" />
        <Setter Property="BackgroundColor" Value="{DynamicResource FormBackground}" />
        <Setter Property="TextColor" Value="{DynamicResource FormTextColor}" />
        <Setter Property="Placeholder" Value="Keresett gyógyszer..." />
    </Style>

    <Style TargetType="SearchBar" x:Key="SearchUser">
        <Setter Property="Margin" Value="10" />
        <Setter Property="BackgroundColor" Value="{DynamicResource FormBackground}" />
        <Setter Property="TextColor" Value="{DynamicResource FormTextColor}" />
        <Setter Property="Placeholder" Value="Keresett felhasználó..." />
    </Style>

    <Style TargetType="Entry" x:Key="InputField">
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="TextColor" Value="{DynamicResource FormTextColor}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource FormBackground}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="15,0"/>
    </Style>

    <Style TargetType="TimePicker" x:Key="TimeInput">
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="TextColor" Value="{DynamicResource FormTextColor}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource FormBackground}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="15,0"/>
    </Style>

    <Style TargetType="FlexLayout" x:Key="Container">
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="Direction" Value="Column" />
        <Setter Property="AlignContent" Value="Center" />
        <Setter Property="JustifyContent" Value="Start" />
    </Style>

    <Style TargetType="Label" x:Key="ListItem">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontFamily" Value="PlayfairDisplay" />
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2,0,2,2" />
    </Style>
    
    <Style TargetType="Label" x:Key="GroupTitle">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontFamily" Value="PlayfairDisplay" />
        <Setter Property="Margin" Value="10,5,10,0" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="BoxView" x:Key="ListDisk">
        <Setter Property="WidthRequest" Value="12" />
        <Setter Property="HeightRequest" Value="12" />
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource ComponentBackground}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Margin" Value="8,0" />
    </Style>
    
    <Style TargetType="BoxView" x:Key="HorizontalLine">
        <Setter Property="Background" Value="{DynamicResource ComponentBackground}"/>
        <Setter Property="HeightRequest" Value="3" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Margin" Value="5,5,5,10" />
    </Style>

    <Style TargetType="BoxView" x:Key="VerticalLine">
        <Setter Property="Background" Value="{DynamicResource ComponentBackground}"/>
        <Setter Property="WidthRequest" Value="3" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="Border" x:Key="FormBorder">
        <Setter Property="Margin" Value="0,15,0,5" />
        <Setter Property="StrokeThickness" Value="3" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Stroke" Value="{DynamicResource ComponentBackground}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20,20,20,20" />
    </Style>

    <Style TargetType="Label" x:Key="Subtitle">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="Subtitle" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="5" />
    </Style>
    
    <Style TargetType="Label" x:Key="Text">
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontFamily" Value="PlayfairDisplay" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" x:Key="Link">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{DynamicResource LinkColor}"/>
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>

    <Style TargetType="Button" x:Key="SubmitButton">
        <Style.Triggers>
            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                <Setter Property="BackgroundColor" Value="{DynamicResource ActiveBackground}"/>
                <Setter Property="TextColor" Value="{DynamicResource ActiveText}"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="BackgroundColor" Value="{DynamicResource ComponentBackground}"/>
        <Setter Property="TextColor" Value="{DynamicResource TextColor}"/>
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Margin" Value="60,10,60,30"/>
    </Style>
    <Style TargetType="Label" x:Key="ErrorMessage">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontFamily" Value="PlayfairDisplay"/>
        <Setter Property="TextColor" Value="{DynamicResource ErrorText}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    <Style TargetType="Switch" x:Key="ToggleTheme">
        <Setter Property="Margin" Value="5,8,20,0"/>
        <Setter Property="Scale" Value="1.3"/>
        <Setter Property="OnColor" Value="{DynamicResource SwitchOn}"/>
        <Setter Property="ThumbColor" Value="{DynamicResource ComponentBackground}"/>
    </Style>
    
    <Style TargetType="VerticalStackLayout" x:Key="Formgroup">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
    </Style>

    <Style TargetType="Label" x:Key="Title">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="PlayfairDisplay" />
        <Setter Property="FontSize" Value="Title" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="20,10" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
    </Style>
    
    <Style TargetType="Frame" x:Key="InputBorder">
        <Setter Property="BackgroundColor" Value="{DynamicResource FormBackground}"/>
        <Setter Property="Margin" Value="30,3"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="HeightRequest" Value="40"/>
    </Style>
</ResourceDictionary>